<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hello world" Height="250" Width="445">
    <StackPanel Margin="10">
        <Label x:Name="LbUsername" FontSize="25">Username: </Label>
        <TextBox x:Name="TbUsername" FontSize="25"></TextBox>
        <Label FontSize="25">Password:</Label>
        <PasswordBox x:Name="Password" FontSize="25" MaxLength="8" KeyDown="Password_KeyDown" KeyUp="Password_KeyUp"></PasswordBox>


    </StackPanel>
</Window>
